<header class="masthead" style='--site-url-short: "{{ site.domain }}"'>
	<div class="branding">
		{% if '/' == page.url %}
		{% assign title_element = 'h1' %}
		{% else %}
		{% assign title_element = 'p' %}
		{% endif %}
		<{{ title_element }} class="branding__title">
			<a
				{% if '/' == page.url %}
				aria-current="page"
				{% endif %}
				class="branding__link"
				href="/"
			>{{ site.title }}</a>
		</{{ title_element }}>
		<span class="branding__pronouns">({{ site.pronouns | join: '/' }})</span>
		<span class="branding__tagline">{{ site.tagline }}</span>
	</div>
	{% if navigation.items %}
	<nav class="navigation">
		<ul class="navigation__menu">
			{% for item in navigation.items %}
			<li class="navigation__item">
				<a
					{% if item.link == page.url %}
					aria-current="page"
					{% endif %}
					class="navigation__link"
					href="{{ item.link }}"
				>{{ item.label }}</a>
			</li>
			{% endfor %}
		</ul>
	</nav>
	{% endif %}
</header>

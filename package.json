{
	"homepage": "https://paulshryock.dev/",
	"bugs": {
		"url": "https://github.com/paulshryock/personal-website/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paulshryock/personal-website.git"
	},
	"author": "Paul Shryock <paul@pshry.com> (https://github.com/paulshryock)",
	"type": "module",
	"license": "UNRELEASED",
	"scripts": {
		"precompile": "rm -rf ./dist/ && mkdir -p ./dist/",
		"compile": "run-p compile:*",
		"compile:css": "sass --style=compressed ./src/assets/scss/:./dist/css/",
		"postcompile:css": "sleep 1 && postcss ./dist/css/*.css --dir=./dist/css/ --map --use=autoprefixer",
		"compile:html": "node --require=esbuild-register ./node_modules/.bin/eleventy",
		"precompile:img": "mkdir -p ./dist/img/",
		"compile:img": "cp -r ./src/assets/favicon/* ./dist/ && cp -r ./src/assets/img/* ./dist/img/",
		"compile:js": "esbuild --bundle --minify --outdir=./dist/js/ --sourcemap --target=$(npx browserslist-to-esbuild | tr ' ' ',') ./src/assets/ts/main.ts",
		"postcompile:js": "sleep 1 && swc ./dist/js/main.js --out-file ./dist/js/main-legacy.js --source-maps",
		"deploy": "netlify deploy",
		"fix": "run-s format:fix lint:fix",
		"format": "npm run format:fix",
		"format:check": "prettier . --check",
		"format:fix": "prettier . --log-level=warn --write",
		"lint": "npm run lint:check",
		"lint:check": "run-p lint:css lint:js",
		"lint:fix": "run-p \"lint:css -- --fix\" \"lint:js -- --fix\"",
		"lint:css": "stylelint \"src/assets/scss/**/*.scss\"",
		"lint:js": "eslint .",
		"quality": "run-p format:check lint typecheck test compile",
		"preserve": "npm run precompile & . ./.env",
		"serve": "run-p \"compile:css -- --style=expanded --watch\" \"postcompile:css -- --watch\" \"compile:html -- --serve\" compile:img \"compile:js -- --minify=false\" \"postcompile:js -- --watch\"",
		"start": "npm run serve",
		"test": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js",
		"test:acceptance": "npm test -- --config=jest.config.acceptance.ts --coverage=false acceptance",
		"typecheck": "tsc",
		"upgrade:all": "ncu --upgrade",
		"upgrade:dry-run": "ncu",
		"upgrade:minor": "ncu --target=minor --upgrade",
		"upgrade:patch": "ncu --target=patch --upgrade"
	},
	"devDependencies": {
		"@11ty/eleventy": "3.0.0",
		"@babel/preset-env": "7.26.0",
		"@babel/preset-typescript": "7.26.0",
		"@eslint/js": "9.15.0",
		"@jest/globals": "29.7.0",
		"@netlify/functions": "2.8.2",
		"@swc/cli": "0.5.1",
		"@swc/core": "1.9.3",
		"@types/eslint__js": "8.42.3",
		"autoprefixer": "10.4.20",
		"browserslist": "4.24.2",
		"browserslist-to-esbuild": "2.1.1",
		"esbuild": "0.24.0",
		"esbuild-register": "3.6.0",
		"eslint": "9.15.0",
		"eslint-config-prettier": "9.1.0",
		"globals": "15.12.0",
		"husky": "9.1.7",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"mock-match-media": "0.4.3",
		"node-html-parser": "6.1.13",
		"npm-check-updates": "17.1.11",
		"npm-run-all2": "7.0.1",
		"postcss": "8.4.49",
		"postcss-cli": "11.0.0",
		"prettier": "3.3.3",
		"sass": "1.81.0",
		"stylelint": "16.10.0",
		"stylelint-config-standard-scss": "13.1.0",
		"stylelint-no-unsupported-browser-features": "8.0.2",
		"ts-node": "10.9.2",
		"typescript": "5.7.2",
		"typescript-eslint": "8.15.0"
	},
	"browserslist": [
		"> 0.5%, fully supports es6-module, not dead"
	],
	"dependencies": {
		"@netlify/blobs": "8.1.0"
	}
}
